@model TestGr4d3.UI.ViewModels.ExamenVM.ExamenFormularioVM

@{
    ViewData["Title"] = "Agregar";
}

<h1 class="text-center">Agregar examen</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Agregar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Estudiantes" class="control-label"></label>
                <select asp-for="EstudianteId" class="form-control" asp-items="@(new SelectList(Model.Estudiantes, "Id", "Nombre"))">
                    <option value="" hidden selected>Selecciona un estudiante.</option>
                </select>
                <span asp-validation-for="EstudianteId" class="text-danger"></span>
                
            </div>
            <div class="form-group">
                <label asp-for="Calificaciones" class="control-label"></label>
                <select asp-for="CalificacionId" asp-items="@(new SelectList(Model.Calificaciones, "Id", "Descripcion"))" class="form-control">
                     <option value="" hidden selected>Seleccione una calificación.</option>
                </select>
                <span asp-validation-for="CalificacionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Asignaturas" class="control-label"></label>
                <select asp-for="AsignaturaId" asp-items="@(new SelectList(Model.Asignaturas, "Id", "Nombre"))" class="form-control">
                    <option value="" hidden disabled selected>Seleccione una asignatura</option>
                </select>
                <span asp-validation-for="AsignaturaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comentario" class="control-label"></label>
                <input asp-for="Comentario" class="form-control" />
                <span asp-validation-for="Comentario" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <button class="btn btn-success btn-block" type="submit"><i class="fas fa-check-square"></i> Aceptar</button>
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="Index" class="btn btn-danger btn-block"><i class="far fa-window-close"></i> Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}