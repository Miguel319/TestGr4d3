@model IEnumerable<TestGr4d3.UI.ViewModels.ExamenVM.ExamenIndexVM>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Exámenes</h1>
<hr/>
<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Estudiante)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Calificacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Asignatura)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comentario)
        </th>
        <th>
            <a asp-action="Agregar" class="btn btn-primary btn-block"><i class="far fa-plus-square"></i> Agregar</a>
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
            <a asp-action="Detalles" asp-route-id="@item.Id">@item.Estudiante</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Asignatura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comentario)
            </td>
            <td>
                <div class="form-row">
                    <a asp-action="Actualizar" asp-route-id="@item.Id" class="btn btn-outline-info col-md-6"><i class="fas fa-edit"></i></a>
                    <a asp-action="Eliminar" asp-route-id="@item.Id" onclick="return confirmar();" class="btn btn-outline-danger col-md-6"><i class="far fa-window-close"></i></a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>

<script>
    function confirmar() {
        return confirm('¿seguro que quieres eliminar este examen?');
    }
</script>
