@model TestGr4d3.UI.ViewModels.AsignaturaVM.AsignaturaIndexVM

@{
    ViewData["Title"] = "Actualizar";
}


<div class="row">
    <div class="col-md-4">
        <h1 class="text-center">Actualizar asignatura</h1>
        <hr />
        <form asp-action="Actualizar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control"/>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagenURL" class="control-label"></label>
                <input asp-for="ImagenURL" class="form-control"/>
                <span asp-validation-for="ImagenURL" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="col-md-6 form-group">
                    <button class="btn btn-success btn-block" type="submit"><i class="fas fa-database"></i> Guardar</button>
                </div>
                <div class="col-md-6 form-group">
                    <a asp-action="Index" class="btn btn-danger btn-block"><i class="far fa-window-close"></i> Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
