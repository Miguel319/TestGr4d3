@model IEnumerable<TestGr4d3.UI.ViewModels.CalificacionVM.CalificacionVMIndex>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Calificaciones</h1>
<hr/>

<table class="table table-bordered table-hover">
    <thead>
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feedback)
            </th>
            <th>
                <a asp-action="Agregar" class="btn btn-primary btn-block"><i class="far fa-plus-square"></i> Agregar</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Feedback)
                </td>
                <td>
                    <div class="form-row">
                        <a asp-action="Actualizar" asp-route-id="@item.Id" class="btn btn-outline-info col-md-6"><i class="fas fa-edit"></i> Actualizar</a>
                        <a asp-action="Eliminar" asp-route-id="@item.Id" onclick="return confirmar();" class="btn btn-outline-danger col-md-6"><i class="far fa-window-close"></i> Eliminar</a>
                    </div>
                        
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function confirmar() {
        return confirm('¿Seguro que quieres eliminar esta calificación?');
    }
</script>